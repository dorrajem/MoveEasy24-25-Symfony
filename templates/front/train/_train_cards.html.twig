{# templates/front/train/_train_cards.html.twig #}
{% for train in trains %}
    <div class="col-md-4 mb-4">
        <div class="card shadow-sm h-100">
            <div class="card-body">
                <h5 class="card-title">🚄 {{ train.TypeTrain }}</h5>
                <p class="card-text mb-1"><strong>Capacité:</strong> {{ train.capacite }}</p>
                <p class="card-text mb-1">
                    <strong>Statut:</strong>
                    <span class="badge 
                        {{ train.statut == 'En service' ? 'bg-success' : 
                           (train.statut == 'En maintenance' ? 'bg-primary' : 'bg-danger') }}">
                        {{ train.statut == 'En service' ? '✅' : 
                           (train.statut == 'En maintenance' ? '🛠️' : '❌') }}
                        {{ train.statut }}
                    </span>
                </p>
                <p class="card-text small text-muted">
                    Mise en service: {{ train.dateMiseEnService ? train.dateMiseEnService|date('d/m/Y') : '-' }}
                </p>
            </div>
            <div class="card-footer bg-transparent border-top-0 text-center">
                <a href="{{ path('front_train_show', { idTrain: train.idTrain }) }}" class="btn btn-outline-dark btn-sm">Détails</a>
            </div>
        </div>
    </div>
{% else %}
    <div class="col-12 text-center text-muted py-3">
        <i class="fas fa-info-circle me-1"></i> Aucun train trouvé.
    </div>
{% endfor %}
