                            {{ train.dateMiseEnService ? train.dateMiseEnService|date('d/m/Y') : '-' }}
                        </td>
                    </tr>
                {% else %}
                    <tr>
                        <td colspan="4" class="text-center text-muted py-4 small">
                            <i class="fas fa-info-circle fa-2x mb-2"></i><br>
