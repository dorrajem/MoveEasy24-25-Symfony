    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize Chart
            const statusData = {
                labels: ['Nouvelles', 'En cours', 'Trait√©es', 'Cl√¥tur√©es'],
                datasets: [{
                    data: [
                        {{ reclamations|filter(r => r.statut == 'Nouvelle')|length }},
