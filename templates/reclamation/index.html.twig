                        {{ reclamations|filter(r => r.statut == 'Trait√©e')|length }},
                        {{ reclamations|filter(r => r.statut == 'Cl√¥tur√©e')|length }}
                    ],
                    backgroundColor: [
                        'rgba(59, 130, 246, 0.7)',
                        'rgba(245, 158, 11, 0.7)',
                        'rgba(16, 185, 129, 0.7)',
                        'rgba(156, 163, 175, 0.7)'
                    ],
                    borderColor: [
                        'rgba(59, 130, 246, 1)',
                        'rgba(245, 158, 11, 1)',
                        'rgba(16, 185, 129, 1)',
                        'rgba(156, 163, 175, 1)'
                    ],
                    borderWidth: 1
                }]
            };

            const config = {
                type: 'doughnut',
                data: statusData,
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'right',
                            labels: {
                                boxWidth: 12,
                                padding: 12,
                                usePointStyle: true,
                                pointStyle: 'circle'
                            }
                        },
                        tooltip: {
                            callbacks: {
                                label: function(context) {
                                    return `${context.label}: ${context.raw} (${Math.round(context.parsed)}%)`;
                                }
                            }
                        }
                    },
                    cutout: '65%',
                    animation: {
                        animateScale: true,
                        animateRotate: true
                    }
                }
            };

            new Chart(
                document.getElementById('status-chart'),
                config
            );

            // Filter functionality
            const filterStatus = document.querySelectorAll('.filter-status');
            const filterCategory = document.querySelectorAll('.filter-category');
            const searchBox = document.getElementById('search-box');
            const reclamationItems = document.querySelectorAll('.reclamation-item');
            const resetButton = document.getElementById('reset-filters');
            
            function filterItems() {
                let selectedStatus = document.querySelector('.filter-status:checked').value;
                let selectedCategory = document.querySelector('.filter-category:checked').value;
                let searchQuery = searchBox.value.toLowerCase();
                
                reclamationItems.forEach(item => {
                    let status = item.getAttribute('data-status');
                    let category = item.getAttribute('data-category');
                    let description = item.querySelector('p').textContent.toLowerCase();
                    let title = item.querySelector('h5').textContent.toLowerCase();

                    let statusMatch = selectedStatus === 'all' || selectedStatus === status;
                    let categoryMatch = selectedCategory === 'all' || selectedCategory === category;
                    let searchMatch = searchQuery === '' || 
                                     description.includes(searchQuery) || 
                                     title.includes(searchQuery) || 
                                     item.querySelector('.ticket-id').textContent.toLowerCase().includes(searchQuery);

                    if (statusMatch && categoryMatch && searchMatch) {
                        item.style.display = 'block';
                    } else {
                        item.style.display = 'none';
                    }
                });
                
                updateCounters();
            }

            filterStatus.forEach(input => input.addEventListener('change', filterItems));
            filterCategory.forEach(input => input.addEventListener('change', filterItems));
            searchBox.addEventListener('input', filterItems);
            
            resetButton.addEventListener('click', function() {
                document.getElementById('filter-all').checked = true;
                document.getElementById('cat-all').checked = true;
                searchBox.value = '';
                filterItems();
            });

            // Update counters
            function updateCounters() {
                const visibleItems = Array.from(reclamationItems).filter(item => item.style.display !== 'none');
                const resolvedItems = visibleItems.filter(item => 
                    item.getAttribute('data-status') === 'Trait√©e' || 
                    item.getAttribute('data-status') === 'Cl√¥tur√©e'
                );
                
                document.getElementById('total-reclamations').textContent = visibleItems.length;
                document.getElementById('resolved-reclamations').textContent = resolvedItems.length;
                
                const resolutionRate = visibleItems.length > 0 
                    ? Math.round((resolvedItems.length / visibleItems.length) * 100) 
                    : 0;
                
                document.getElementById('resolution-rate').textContent = resolutionRate + '%';
                document.querySelector('.progress-bar').style.width = resolutionRate + '%';
            }
        });
        
    </script>
