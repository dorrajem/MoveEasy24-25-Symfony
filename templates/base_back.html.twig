<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}Admin{% endblock %}</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css">
    {% block stylesheets %}{% endblock %}
</head>
<body class="d-flex">

    {# === Sidebar (Left Column) === #}
    <div class="bg-dark text-white p-3" style="min-width: 220px; min-height: 100vh;">
        <h4 class="text-white mb-4"><i class="fas fa-cogs me-2"></i>Admin</h4>

        <ul class="nav flex-column">
            <li class="nav-item mb-2">
                <a class="nav-link text-white {% if app.request.attributes.get('_route') starts with 'app_train_dashboard' %}fw-bold{% endif %}" href="{{ path('app_train_dashboard') }}">
                    <i class="fas fa-chart-line me-2"></i> Tableau de bord
                </a>
            </li>
            <li class="nav-item mb-2">
                <a class="nav-link text-white {% if app.request.attributes.get('_route') starts with 'app_train_index' %}fw-bold{% endif %}" href="{{ path('app_train_index') }}">
                    <i class="fas fa-train me-2"></i> Liste des Trains
                </a>
            </li>
        </ul>
    </div>

    {# === Main Content Area === #}
    <div class="flex-grow-1 p-4">
        <h2 class="mb-4">{% block page_title %}{% endblock %}</h2>

        {% for message in app.flashes('success') %}
            <div class="alert alert-success">{{ message }}</div>
        {% endfor %}
        {% for message in app.flashes('error') %}
            <div class="alert alert-danger">{{ message }}</div>
        {% endfor %}

        {% block body %}{% endblock %}
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    {% block javascripts %}{% endblock %}
</body>
</html>
