{# base_back.html.twig #}
<!DOCTYPE html>
<html lang="en">
<head>
    <title>{% block title %}Admin Dashboard{% endblock %}</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, user-scalable=0, minimal-ui">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="description" content="CodedThemes">
    <meta name="keywords" content="Admin, Dashboard">
    <meta name="author" content="CodedThemes">

    {% block css %}
    <!-- External Libraries -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:400,600" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    
    <!-- Custom Styles -->
    <style>
    :root {
        --primary-bg: #2B2D3E;
        --secondary-bg: #f8f9fa;
        --white: #ffffff;
        --text-primary: #333;
        --text-secondary: #6c757d;
        --border-color: #dee2e6;
        --button-green: #8BC34A;
        --button-blue: #03A9F4;
        --button-red: #FF5252;
    }

    body {
        font-family: 'Open Sans', sans-serif;
        background-color: var(--secondary-bg);
        margin: 0;
        padding: 0;
    }

    /* Navbar Styles */
    .navbar-brand {
        font-size: 24px;
        font-weight: bold;
        color: var(--white);
        text-decoration: none;
        display: flex;
        align-items: center;
        gap: 10px;
    }

    /* Sidebar Styles */
    .pcoded-navbar {
        background-color: var(--primary-bg);
        width: 260px;
        height: 100vh;
        position: fixed;
        left: 0;
        top: 0;
        z-index: 1000;
        transition: all 0.3s ease;
        display: flex;
        flex-direction: column;
    }

    /* CONTENT AREA - THIS IS CRUCIAL */
    .pcoded-content {
        margin-left: 260px;
        padding: 20px;
        min-height: 100vh;
    }

    .main-menu-header {
        padding: 20px;
        text-align: center;
        border-bottom: 1px solid rgba(255,255,255,0.1);
    }

    .pcoded-item {
        list-style: none;
        margin: 0;
        padding: 0;
        flex-grow: 1;
        display: flex;
        flex-direction: column;
    }

    .pcoded-item li a {
        color: var(--white);
        padding: 12px 20px;
        display: flex;
        align-items: center;
        text-decoration: none;
        transition: all 0.3s ease;
    }

    .pcoded-item li a:hover {
        background-color: rgba(255,255,255,0.1);
    }

    .pcoded-item li a i {
        margin-right: 10px;
        width: 20px;
        text-align: center;
    }

    /* Responsive Design */
    @media (max-width: 992px) {
        .pcoded-navbar {
            width: 200px;
        }
        .pcoded-content {
            margin-left: 200px;
        }
    }

    @media (max-width: 768px) {
        .pcoded-navbar {
            left: -260px;
        }
        .pcoded-content {
            margin-left: 0;
        }
    }
    </style>
    {% endblock %}
</head>

<body>
    <div class="pcoded">
        <!-- Sidebar -->
        <nav class="pcoded-navbar">
            <div class="navbar-brand p-3">
                <i class="fas fa-book"></i>
                <span>MoveEasy</span>
            </div>

            <div class="main-menu-header"></div>

            <ul class="pcoded-item">
                <li class="active">
                    <a href="#">
                        <i class="fas fa-home"></i>
                        <span>Dashboard</span>
                    </a>
                </li>
                <li>
                    <a href="#management">
                        <i class="fas fa-cogs"></i>
                        <span>Management</span>
                    </a>
                    <ul class="nested-menu">
                        #<li><a href="{{ path('app_reservation_index') }}"><i class="fas fa-users"></i>Reservation</a></li>
                        <!-- Add other menu items -->
                    </ul>
                </li>
            </ul>
        </nav>

        <!-- MAIN CONTENT AREA -->
        <div class="pcoded-content">{% for message in app.flashes('backoffice_success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}
    
    {% for message in app.flashes('backoffice_error') %}
        <div class="alert alert-danger">
            {{ message }}
        </div>
    {% endfor %}
            {% block body %}{% endblock %}
        </div>
    </div>
</body>
</html>