{% extends 'base.html.twig' %}

{% block title %}Ajouter une Maintenance{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        :root {
            --primary-color: #007bff;
            --primary-medium: #0056b3;
            --primary-light: #cce5ff;
            --background-light: #f8f9fa;
            --accent-color: #28a745;
            --accent-hover: #218838;
        }

        .card-custom {
            border-left: 6px solid var(--primary-medium);
            border-radius: 0.75rem;
            overflow: hidden;
            box-shadow: 0 8px 20px rgba(0, 0, 0, 0.1);
            transition: transform 0.3s ease;
        }

        .card-custom:hover {
            transform: translateY(-4px);
        }

        .card-header-custom {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-medium));
            color: white;
            text-align: center;
            padding: 2rem 1rem;
        }

        .card-header-custom h3 {
            font-weight: 700;
            margin-bottom: 0.5rem;
        }

        .card-header-custom p {
            font-size: 0.95rem;
            color: rgba(255, 255, 255, 0.85);
        }

        .form-label {
            font-weight: 600;
            color: #333;
            margin-bottom: 8px;
        }

        .form-control {
            padding: 12px 15px;
            border-radius: 0.5rem;
            border: 1px solid #ced4da;
            transition: border-color 0.3s ease, box-shadow 0.3s ease;
        }

        .form-control:focus {
            border-color: var(--primary-color);
            box-shadow: 0 0 0 0.2rem rgba(0, 123, 255, 0.25);
        }

        .btn-submit {
            background-color: var(--accent-color);
            border: none;
            padding: 12px 30px;
            font-size: 1.1rem;
            border-radius: 0.5rem;
            font-weight: 600;
            display: inline-flex;
            align-items: center;
            transition: background-color 0.3s ease, transform 0.2s ease;
        }

        .btn-submit:hover {
            background-color: var(--accent-hover);
            transform: translateY(-2px);
        }
    </style>
{% endblock %}

{% block body %}
<div class="container my-5">
    <div class="card card-custom">
        <div class="card-header card-header-custom">
            <h3 class="mb-0">üõ†Ô∏è Nouvelle Maintenance</h3>
            <p class="mb-0">Veuillez remplir les informations ci-dessous</p>
        </div>

        <div class="card-body p-5" style="background-color: var(--background-light);">
            {{ form_start(form) }}

            <div class="mb-4">
                {{ form_label(form.idEquipement, '√âquipement concern√©', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.idEquipement, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.idEquipement) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.description, {'attr': {'class': 'form-control', 'rows': '3', 'placeholder': 'Ex: Changement de freins, v√©rification moteur...'}}) }}
                {{ form_errors(form.description) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.periode, 'P√©riode', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.periode, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.periode) }}
            </div>

            <div class="mb-4">
                {{ form_label(form.dateMaintenance, 'Date de maintenance', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(form.dateMaintenance, {'attr': {'class': 'form-control'}}) }}
                {{ form_errors(form.dateMaintenance) }}
            </div>

            <div class="text-center mt-5">
                <button type="submit" class="btn btn-submit">
                    <i class="fas fa-plus-circle me-2"></i> Enregistrer Maintenance
                </button>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
