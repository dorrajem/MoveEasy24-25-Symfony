{% extends 'base.html.twig' %}

{% block title %}Liste des R√©servations{% endblock %}

{% block body %}
<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h4"><i class="fas fa-ticket-alt me-2"></i>Liste des R√©servations</h1>
        <input type="text" id="search-input" class="form-control form-control-sm w-25" placeholder="Rechercher une r√©servation...">
    </div>

    <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover table-striped align-middle mb-0 text-center">
                    <thead class="table-dark small">
                        <tr>
                            <th>Date</th>
                            <th>Heure</th>
                            <th>√âtat</th>
                            <th>Nombre de places</th>
                            <th>Type de place</th>
                            <th>Type de train</th>
                            <th>Destination</th>
                            <th>Utilisateur</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody id="reservation-body">
                        {% for reservation in reservations %}
                            <tr>
                                <td>{{ reservation.dateR ? reservation.dateR|date('d/m/Y') : '' }}</td>
                                <td>{{ reservation.heureR ? reservation.heureR|date('H:i') : '' }}</td>
                                <td>
                                    <span class="badge
                                        {% if reservation.etatR == 'Confirm√©' %}
                                            bg-success
                                        {% elseif reservation.etatR == 'Annul√©' %}
                                            bg-danger
                                        {% else %}
                                            bg-warning text-dark
                                        {% endif %}
                                    ">
                                        {{ reservation.etatR }}
                                    </span>
                                </td>
                                <td>{{ reservation.nbrplace }}</td>
                                <td>{{ reservation.typeplace }}</td>
                                <td>{{ reservation.typeTrainR }}</td>
                                <td>{{ reservation.destinationR }}</td>
                                <td>{{ reservation.NameUser }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        
                                        <a href="{{ path('app_reservation_edit', {'id': reservation.idR}) }}" class="btn btn-outline-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <form method="post" action="{{ path('app_reservation_delete', {'id': reservation.idR}) }}"
                                              onsubmit="return confirm('√ätes-vous s√ªr de vouloir supprimer cette r√©servation ?');" class="d-inline">
                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reservation.idR) }}">
                                            <button class="btn btn-outline-danger" title="Supprimer">
                                                <i class="fas fa-trash-alt"></i>
                                            </button>
                                        </form>
                                    </div>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="9" class="text-center py-5 text-muted">
                                    <i class="fas fa-info-circle fa-2x mb-2"></i><br>
                                    Aucune r√©servation trouv√©e.
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
    document.addEventListener("DOMContentLoaded", function () {
        const searchInput = document.getElementById('search-input');
        const tableBody = document.getElementById('reservation-body');

        if (!searchInput || !tableBody) {
            console.warn("üîî searchInput or tableBody not found!");
            return;
        }

        let debounce;
        searchInput.addEventListener('input', function () {
            clearTimeout(debounce);

            debounce = setTimeout(() => {
                const query = searchInput.value.trim();
                const url = `/admin/reservation/search?q=${encodeURIComponent(query)}`;
                const xhr = new XMLHttpRequest();

                xhr.open("GET", url, true);
                xhr.setRequestHeader("X-Requested-With", "XMLHttpRequest");

                xhr.onreadystatechange = function () {
                    if (xhr.readyState === 4 && xhr.status === 200) {
                        tableBody.innerHTML = xhr.responseText;
                    }
                };

                xhr.send();
            }, 300);
        });
    });
</script>
{% endblock %}
