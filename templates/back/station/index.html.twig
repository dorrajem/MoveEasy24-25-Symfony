{% extends 'back/base.html.twig' %}

{% block title %}List of Stations{% endblock %}

{% block content %}
<h1 class="h3 mb-4 text-gray-800">List of Stations</h1>

<a href="{{ path('station_new') }}" class="btn btn-success mb-3"><i class="fas fa-plus-circle"></i> Add</a>

<table class="table table-bordered table-hover">
    <thead class="table-primary">
        <tr>
            <th>ID</th>
            <th>Name</th>
            <th>Status</th>
            <th>Itinerary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        {% for station in stations %}
            <tr>
                <td>{{ station.id }}</td>
                <td>{{ station.nomStation }}</td>
                <td>{{ station.statut }}</td>
                <td>{{ station.itineraire.nomItineraire }}</td>
                <td>
                    <a href="{{ path('station_show', {'id': station.id}) }}" class="btn btn-info btn-sm">View</a>
                    <a href="{{ path('station_edit', {'id': station.id}) }}" class="btn btn-warning btn-sm">Edit</a>
                    <a href="{{ path('station_delete', {'id': station.id}) }}" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr><td colspan="5" class="text-center">No stations found.</td></tr>
        {% endfor %}
    </tbody>
</table>
{% endblock %}
