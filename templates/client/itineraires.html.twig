{% extends 'client/base.html.twig' %}

{% block title %}Itineraries{% endblock %}

{% block body %}
<section style="padding: 2rem; background-color: #f4f4f4;">
  <h2 style="text-align: center; margin-bottom: 2rem;">Our Itineraries</h2>
  <div style="display: grid; grid-template-columns: repeat(auto-fit, minmax(300px, 1fr)); gap: 1.5rem;">
    {% for itineraire in itineraires %}
      <div style="background: white; border-radius: 15px; padding: 1.5rem; box-shadow: 0 4px 8px rgba(0,0,0,0.1);">
        <h3 style="color: #2F7366;">{{ itineraire.nomItineraire }}</h3>
        <p><strong>Distance:</strong> {{ itineraire.distance }} km</p>
        <p><strong>Departure:</strong> {{ itineraire.heureDepartPrevue|date('H:i') }}</p>
        <p><strong>Arrival:</strong> {{ itineraire.heureArriveePrevue|date('H:i') }}</p>
        <p><strong>Date:</strong> {{ itineraire.dateiti|date('Y-m-d') }}</p>
        
        <a href="{{ path('app_stations_by_itineraire', {'id': itineraire.id}) }}" 
           style="margin-top: 1rem; display: inline-block; background-color: #3BBF82; color: white; padding: 0.5rem 1rem; border-radius: 8px; text-decoration: none;">
          View Stations
        </a>
      </div>
    {% else %}
      <p>No itineraries available.</p>
    {% endfor %}
  </div>
</section>
{% endblock %}
