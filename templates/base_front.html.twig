<!DOCTYPE html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title>{% block title %}MoveEasy{% endblock %}</title>

    <!-- Bootstrap CSS (Version 5) -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <!-- Custom CSS -->
    <style>
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        /* Palette de couleurs */
        .badge-disponible {
            background-color: #00A896; /* Couleur pour "Disponible" */
            color: #F8F9FA;
        }
        
        .badge-indisponible {
            background-color: #F3752B; /* Couleur pour "Non disponible" */
            color: #F8F9FA;
        }
        
        .table {
            background-color: #F8F9FA; /* Fond de la table */
        }
        
        .table-dark th {
            background-color: #2A2D34; /* Couleur du fond des en-tÃªtes */
            color: #FFC857; /* Couleur du texte */
        }

        .table-striped tbody tr:nth-child(odd) {
            background-color: #99D5CF; /* Fond des lignes impaires */
        }

        .table-hover tbody tr:hover {
            background-color: #E63946; /* Fond au survol des lignes */
        }

        /* Navbar Custom Styles */
        .navbar-brand {
            font-weight: bold;
            font-size: 1.5rem;
        }

        footer a:hover {
            text-decoration: underline;
        }

        /* Alert fade-out animation */
        .fade-out {
            opacity: 1;
            transition: opacity 1s ease-out;
        }

        .footer-custom {
    background-color: #0B5351;
}


    </style>

    {% block stylesheets %}{% endblock %}
</head>
<body>

    {% block body %}{% endblock %}

    <!-- Bootstrap JS (for navbar toggler and alerts) -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Auto-hide alerts after 4 seconds -->
    <script>
        setTimeout(function () {
            const alerts = document.querySelectorAll('.alert');
            alerts.forEach(function (alert) {
                alert.classList.remove('show');
                alert.classList.add('fade');
            });
        }, 4000);
    </script>

    {% block javascripts %}{% endblock %}
</body>
</html>

