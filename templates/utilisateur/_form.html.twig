<div class="form-card">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h5 class="mb-0"><i class="fas fa-user-edit"></i> {{ form_title|default('Informations') }}</h5>
    </div>

    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
        <div class="row">
            {% for field in form %}
                {% if field.vars.name != '_token' and field.vars.name != 'submit' %}
                    <div class="col-md-6 mb-4">
                        <div class="form-group">
                            {{ form_label(field, null, {'label_attr': {'class': 'form-label'}}) }}
                            {{ form_widget(field, {'attr': {'class': 'form-control ' ~ (field.vars.valid ? '' : 'is-invalid')}}) }}
                            {% if not field.vars.valid %}
                                <div class="invalid-feedback">
                                    {{ form_errors(field) }}
                                </div>
                            {% endif %}
                            {% if field.vars.help is defined and field.vars.help is not empty %}
                                <small class="form-text text-muted">{{ field.vars.help }}</small>
                            {% endif %}
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        
        <div class="d-flex justify-content-start gap-2 mt-4">
            <button type="submit" class="btn btn-primary">
                <i class="fas fa-save"></i> {{ button_label|default('Enregistrer') }}
            </button>
            <a href="{{ cancel_path|default(path('app_utilisateur_index')) }}" class="btn btn-outline-primary">
                <i class="fas fa-times"></i> Annuler
            </a>
        </div>
    {{ form_end(form) }}
</div>