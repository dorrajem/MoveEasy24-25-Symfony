{% extends 'base_front.html.twig' %}

{% block body %}
    <!-- Barre verte en haut -->
    <div class="rail-banner">
        <div class="container">
            <div class="d-flex align-items-center">
                <i class="fas fa-cogs"></i>
                <div>
                    <h1 class="h4 fw-bold mb-0">Équipements</h1>
                    <small>Liste des équipements disponibles dans MoveEasy</small>
                </div>
            </div>
        </div>
    </div>

    <div class="container mt-4">
        <div class="card shadow p-4">
            <table class="table table-striped table-hover text-center align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Type</th>
                        <th>Train</th>
                        <th>Quantité</th>
                        <th>Statut</th>
                    </tr>
                </thead>
                <tbody>
                    {% for eq in equipements %}
                        <tr>
                            <td>{{ eq.typeEquipement }}</td>
                            <td>{{ eq.idTrain ?? 'Non défini' }}</td>
                            <td>{{ eq.quantiteDisponible ?? 0 }}</td>
                            <td>
                                {% if eq.statut == 'Disponible' %}
                                    <span class="badge badge-disponible">{{ eq.statut }}</span>
                                {% else %}
                                    <span class="badge badge-indisponible">{{ eq.statut ?? 'N/A' }}</span>
                                {% endif %}
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4" class="text-muted">Aucun équipement trouvé.</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
    </div>
{% endblock %}


