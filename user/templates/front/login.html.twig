{% extends 'base_front.html.twig' %}

{% block title %}Login - MoveEasy Front{% endblock %}

{% block body %}
<div class="container mt-4">
  <h1 class="mb-4">Se connecter</h1>
  <form method="post" action="{{ path('front_login') }}">
    {# Token CSRF pour la sécurité #}
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <div class="mb-3">
      <label for="inputUsername" class="form-label">Email</label>
      {# IMPORTANT : le nom doit être _username #}
      <input type="email" name="_username" id="inputUsername" class="form-control" required autofocus>
    </div>

    <div class="mb-3">
      <label for="inputPassword" class="form-label">Mot de passe</label>
      <input type="password" name="_password" id="inputPassword" class="form-control" required>
    </div>

    <button class="btn btn-primary" type="submit">Se connecter</button>
  </form>

  <p class="mt-3">Vous n'avez pas de compte ? <a href="{{ path('front_signup') }}">S'inscrire</a></p>
</div>
{% endblock %}
