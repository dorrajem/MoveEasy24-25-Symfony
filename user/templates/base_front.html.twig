                            <a class="nav-link" href="{{ path('front_login') }}"><i class="fas fa-sign-in-alt me-1"></i>Login</a>
                        </li>
                        <li class="nav-item login-btn" data-aos="fade-down" data-aos-delay="900">
                            <a class="nav-link" href="{{ path('front_signup') }}"><i class="fas fa-user-plus me-1"></i>Signup</a>
                        </li>
                    {% endif %}
                </ul>
            </div>
        </div>
    </nav>
   



