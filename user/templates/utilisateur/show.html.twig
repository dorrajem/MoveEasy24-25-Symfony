{% extends 'base.html.twig' %}

{% block title %}Détails de l'utilisateur{% endblock %}
{% block page_title %}Détails de l'utilisateur{% endblock %}

{% block breadcrumb %}
  <li class="breadcrumb-item"><a href="{{ path('app_utilisateur_index') }}">Utilisateurs</a></li>
  <li class="breadcrumb-item active">Détails</li>
{% endblock %}

{% block body %}
<div class="row">
  <div class="col-md-12">
    <div class="card">
      <!-- Header de la carte -->
      <div class="card-header">
        <div class="d-flex justify-content-between align-items-center">
          <h3 class="card-title">
            <i class="fas fa-user mr-2"></i>Informations de l'utilisateur
          </h3>
          <div>
            <!-- Bouton Modifier en couleur warning -->
            <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}" class="btn btn-warning">
              <i class="fas fa-edit mr-1"></i> Modifier
            </a>
            <!-- Formulaire de suppression avec CSRF et confirmation -->
            <form method="post" action="{{ path('app_utilisateur_delete', {'id': utilisateur.id}) }}" class="d-inline" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
              <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ utilisateur.id) }}">
              <button class="btn btn-danger" type="submit">
                <i class="fas fa-trash mr-1"></i> Supprimer
              </button>
            </form>
          </div>
        </div>
      </div>
      
      <!-- Corps de la carte -->
      <div class="card-body">
        <div class="row">
          <!-- Colonne gauche: Détails de l'utilisateur -->
          <div class="col-md-6">
            <table class="table table-bordered">
              <tbody>
                <tr>
                  <th style="width: 30%">ID</th>
                  <td>{{ utilisateur.id }}</td>
                </tr>
                <tr>
                  <th>Nom</th>
                  <td>{{ utilisateur.nom }}</td>
                </tr>
                <tr>
                  <th>Prénom</th>
                  <td>{{ utilisateur.prenom }}</td>
                </tr>
                <tr>
                  <th>Email</th>
                  <td>{{ utilisateur.email }}</td>
                </tr>
              </tbody>
            </table>
          </div>
          
          <!-- Colonne droite: Profil -->
          <div class="col-md-6">
            <div class="card card-secondary">
              <div class="card-header">
                <h3 class="card-title">Profil</h3>
              </div>
              <div class="card-body">
                {% if utilisateur.profil %}
                  <div class="table-responsive">
                    <table class="table table-bordered mb-0">
                      <tbody>
                        <tr>
                          <th style="width: 30%">ID Profil</th>
                          <td>{{ utilisateur.profil.id }}</td>
                        </tr>
                        {# Vous pouvez ajouter d'autres champs du profil ici, par exemple : #}
                        {# <tr>
                              <th>Nom Profil</th>
                              <td>{{ utilisateur.profil.nom }}</td>
                            </tr> #}
                      </tbody>
                    </table>
                  </div>
                {% else %}
                  <p>Aucun profil associé.</p>
                {% endif %}
              </div>
            </div>
          </div>
        </div>
      </div>
      
      <!-- Pied de la carte avec bouton de retour -->
      <div class="card-footer">
         <a href="{{ path('app_utilisateur_index') }}" class="btn btn-secondary">
           <i class="fas fa-arrow-left mr-1"></i> Retour à la liste
         </a>
      </div>
    </div>
  </div>
</div>
{% endblock %}
