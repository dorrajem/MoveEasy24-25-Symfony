<div class="card card-primary">
  <div class="card-header">
    <h3 class="card-title">{{ form_title|default('Informations') }}</h3>
  </div>
  <div class="card-body">
    {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': 'novalidate'}}) }}
      <div class="row">
        {% for field in form %}
          {% if field.vars.name != '_token' and field.vars.name != 'submit' %}
            <div class="col-md-6 mb-3">
              <div class="form-group">
                {{ form_label(field) }}
                {{ form_widget(field, {'attr': {'class': 'form-control ' ~ (field.vars.valid ? '' : 'is-invalid')}}) }}
                {{ form_errors(field) }}
                {% if field.vars.help is defined and field.vars.help is not empty %}
                  <small class="form-text text-muted">{{ field.vars.help }}</small>
                {% endif %}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
      <div class="row mt-3">
        <div class="col-12">
          <button type="submit" class="btn btn-primary">
            <i class="fas fa-save mr-1"></i> {{ button_label|default('Enregistrer') }}
          </button>
          <a href="{{ cancel_path|default(path('app_utilisateur_index')) }}" class="btn btn-secondary">
            <i class="fas fa-times mr-1"></i> Annuler
          </a>
        </div>
      </div>
    {{ form_end(form) }}
  </div>
</div>